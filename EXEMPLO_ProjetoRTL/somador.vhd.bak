library ieee;
use ieee.std_logic_1164.all;
use ieee.numeric_std.all;

entity somador is

	port 
	(
		AuxQtdProcessada	   : in unsigned (15 downto 0);
		Peso	               : in unsigned (15 downto 0);
		QtdProcessada        : out unsigned (15 downto 0)
	);

end entity;

architecture rtl of somador is
begin

	QtdProcessada <= AuxQtdProcessada + Peso;

end rtl;
